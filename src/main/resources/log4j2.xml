<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
	<Properties>
		<Property name="LOG_PATTERN">[%p] [%d] [%c{1}], %m%n</Property>
		<Property name="APP_LOG_ROOT">log</Property>
	</Properties>

	<Appenders>
		<Console name="console" target="SYSTEM_OUT" follow="true">
			<PatternLayout pattern="${LOG_PATTERN}" />
		</Console>
		<RollingFile name="flog"
			fileName="${APP_LOG_ROOT}/app.log"
			filePattern="${APP_LOG_ROOT}/app-%d{yyyy-MM-dd}-%i.log">
			<PatternLayout pattern="${LOG_PATTERN}" />
			<Policies>
				<TimeBasedTriggeringPolicy interval="1" />
			</Policies>
			<DefaultRolloverStrategy max="14" />
		</RollingFile>
	</Appenders>

	<Loggers>
		<Root level="info">
			<AppenderRef ref="console" />
			<AppenderRef ref="flog" />
		</Root>
	</Loggers>
</Configuration>